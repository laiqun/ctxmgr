<Window x:Class="ctxmgr.Page.About.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ctxmgr.Page.About"
        xmlns:props="clr-namespace:ctxmgr.Properties"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Closing="Window_Closing"
        FontFamily="Resources/#Google Sans Code Light"
        Title="{x:Static props:Resources.About}" Height="300" Width="400">
    <Border Padding="20">
        <StackPanel HorizontalAlignment="Center" Width="300">
            <!-- 图标 -->
            <Image  Width="64" Height="64"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <!-- 应用名称 -->
            <TextBlock x:Name="AppNameText"
                       FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <!-- 版本号 -->
            <TextBlock x:Name="VersionText"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,10"/>
            <!-- 版权信息 -->
            <TextBlock x:Name="CopyrightText"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>
            <!-- 官网链接 -->
            <TextBlock HorizontalAlignment="Center">
                HomePage:
                <Hyperlink NavigateUri="https://ctxmgr.com"
                           RequestNavigate="Hyperlink_OnRequestNavigate" >
                    <Run Text="{x:Static props:Resources.VisitOfficialWebsite}"/>
                </Hyperlink>
            </TextBlock>
            <TextBlock Text="Email:55154717@qq.com"  HorizontalAlignment="Center"/>
            <!-- 关闭按钮 -->
            <Button Content="{x:Static props:Resources.OK}" IsDefault="True"
                    HorizontalAlignment="Center" Width="80" Margin="0,15,0,0"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Border>
</Window>
