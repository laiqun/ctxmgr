<Window x:Class="ctxmgr.Page.MessageBox.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ctxmgr.Page.MessageBox"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        xmlns:props="clr-namespace:ctxmgr.Properties"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Title="{x:Static props:Resources.Confirm}" Height="140" Width="272"
        FontFamily="Resources/#Google Sans Code Light"
        >
    <Border Background="#FFF0F0F0" 
            CornerRadius="4" 
            BorderBrush="#FF999999" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#FFF0F0F0">
                <TextBlock x:Name="TitleTextBlock" 
                           Text="Message" 
                           Foreground="#FF000000" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Margin="10,5"/>
            </Grid>

            <!-- Message Content -->
            <Grid Grid.Row="1">
                <TextBlock x:Name="MessageTextBlock" 
                           TextWrapping="Wrap" 
                           Padding="20"
                           Foreground="#FF000000"
                           FontSize="12"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,15">
                <Button x:Name="YesButton" 
                        Content="{x:Static props:Resources.Yes}" 
                        Width="80" 
                        Height="30" 
                        Margin="5"
                        Background="#FFE1E1E1"
                        Foreground="#FF000000"
                        BorderBrush="#FFADADAD"
                        FontSize="11"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button x:Name="NoButton" 
                        Content="{x:Static props:Resources.No}" 
                        Width="80" 
                        Height="30" 
                        Margin="5"
                        Background="#FFE1E1E1"
                        Foreground="#FF000000"
                        BorderBrush="#FFADADAD"
                        FontSize="11"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button x:Name="OKButton" 
                        Content="{x:Static props:Resources.OK}" 
                        Width="80" 
                        Height="30" 
                        Margin="5"
                        Background="#FFE1E1E1"
                        Foreground="#FF000000"
                        BorderBrush="#FFADADAD"
                        FontSize="11"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button x:Name="CancelButton" 
                        Content="{x:Static props:Resources.Cancel}" 
                        Width="80" 
                        Height="30" 
                        Margin="5"
                        Background="#FFE1E1E1"
                        Foreground="#FF000000"
                        BorderBrush="#FFADADAD"
                        FontSize="11"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
