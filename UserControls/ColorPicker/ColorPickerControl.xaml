<UserControl x:Class="ctxmgr.UserControls.ColorPicker.ColorPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ctxmgr.UserControls.ColorPicker"
             xmlns:props="clr-namespace:ctxmgr.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="220">
    <StackPanel Orientation="Vertical" Margin="5">
        <TextBlock Text="{x:Static props:Resources.Color}" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="A:" Width="20" VerticalAlignment="Center"/>
            <Slider Minimum="150" Maximum="255"  Value="{Binding Alpha, Mode=TwoWay}" Width="150"/>
            <TextBox Text="{Binding Alpha,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Width="30" Margin="5,0,0,0"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="R:" Width="20" VerticalAlignment="Center"/>
            <Slider Minimum="0" Maximum="255" Value="{Binding Red, Mode=TwoWay}" Width="150"/>
            <TextBox Text="{Binding Red,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Width="30" Margin="5,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="G:" Width="20" VerticalAlignment="Center"/>
            <Slider Minimum="0" Maximum="255" Value="{Binding Green, Mode=TwoWay}" Width="150"/>
            <TextBox Text="{Binding Green,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Width="30" Margin="5,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="B:" Width="20" VerticalAlignment="Center"/>
            <Slider Minimum="0" Maximum="255" Value="{Binding Blue, Mode=TwoWay}" Width="150"/>
            <TextBox Text="{Binding Blue,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Width="30" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- 当前颜色预览 -->
        <Rectangle Width="50" Height="25" Fill="{Binding SelectedColor}" Stroke="Black" Margin="0,5,0,0"/>
    </StackPanel>
</UserControl>
