<UserControl x:Class="ctxmgr.UserControls.ColorPicker.ColorPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ctxmgr.UserControls.ColorPicker"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="220">
    <StackPanel Orientation="Vertical" Margin="5">
        <TextBlock Text="颜色:" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="A:" Width="20" VerticalAlignment="Center"/>
            <Slider Minimum="0" Maximum="255" Value="{Binding A, Mode=TwoWay}" Width="150"/>
            <TextBox Text="{Binding A,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Width="30" Margin="5,0,0,0"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="R:" Width="20" VerticalAlignment="Center"/>
            <Slider Minimum="0" Maximum="255" Value="{Binding R, Mode=TwoWay}" Width="150"/>
            <TextBox Text="{Binding R,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Width="30" Margin="5,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="G:" Width="20" VerticalAlignment="Center"/>
            <Slider Minimum="0" Maximum="255" Value="{Binding G, Mode=TwoWay}" Width="150"/>
            <TextBox Text="{Binding G,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Width="30" Margin="5,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="B:" Width="20" VerticalAlignment="Center"/>
            <Slider Minimum="0" Maximum="255" Value="{Binding B, Mode=TwoWay}" Width="150"/>
            <TextBox Text="{Binding B,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Width="30" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- 当前颜色预览 -->
        <Rectangle Width="50" Height="25" Fill="{Binding SelectedColor}" Stroke="Black" Margin="0,5,0,0"/>
    </StackPanel>
</UserControl>
